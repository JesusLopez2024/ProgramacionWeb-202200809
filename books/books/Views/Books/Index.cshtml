@model IEnumerable<Book>
@{
    
}
<div class="container-fluid">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col col-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"> @item.titulo</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">Autor: @item.autor</h6>
                        <h6 class="card-subtitle mb-2 text-body-secondary">Año: @item.anio</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card’s content.</p>
                        
                        <a class="card-link" asp-area="" asp-controller="Books" asp-action="Detalle">Ver informacion</a> 
                    </div>
                </div>
            </div>
        }
    </div>
</div>


